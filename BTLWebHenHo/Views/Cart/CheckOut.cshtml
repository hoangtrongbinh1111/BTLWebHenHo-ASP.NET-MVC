
@{
    Layout = null;
    ViewBag.Title = "CheckOut";
    ViewBag.Title = "add_product";
    var list_order = ViewBag.list_order;
    var all_amount = ViewBag.all_amount;
    var price_transit = 7000;
    var all = all_amount + price_transit;
    var location = ViewBag.location;

}


<!DOCTYPE html>

<html>
@Html.Partial("head")
<link rel="stylesheet" href="~/Public/Asset/css/CheckOut.css">
<script src="http://maps.google.com/maps?file=api&v=2&key=ABQIAAAA7j_Q-rshuWkc8HyFI4V2HxQYPm-xtd00hTQOC0OXpAMO40FHAxT29dNBGfxqMPq5zwdeiDSHEPL89A&callback=initMaps" type="text/javascript"></script>
<style>
</style>
<body>
    <script language="javascript">
        var geocoder, location1, location2;
    </script>
    <div id="wrapper">
        <div id="tittle-trade" class="d-flex py-3">
            <a href="/Cart/buy_coin">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h3>Check out</h3>
        </div>
        <div class="border_delivery">

        </div>
        <div class="address_ship">
            <div class="ship_header mt-3 d-flex">
                <i class="fas fa-map-marker-alt mx-2"></i>
                <h4>Địa chỉ nhận hàng</h4>
            </div>
            <div class="address_content container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-4">
                                <strong>Hoang Trong Binh (+84)</strong>
                                <p>0985592699</p>
                            </div>
                            <div class="col-md-6">
                                <p> Nhà ông Hoàng Văn Biện, thôn Đào Viên, xã Dân Tiến, huyện Khoái Châu, tỉnh Hưng Yên</p>
                            </div>
                            <div class="col-md-2">
                                <button class="btn btn-danger" data-toggle="modal" data-target="#change_address">Thay đổi</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="btn-continue">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="info-buy-product">
                            @{
                                if (list_order != null && list_order.Count > 0)
                                {
                                    <table class="table table-striped table-hover" style="font-size:14px;">

                                        <thead>
                                            <tr>
                                                <th>STT</th>
                                                <th>Sản phẩm</th>
                                                <th>Đơn giá</th>
                                                <th>Số lượng</th>
                                                <th>Xóa</th>
                                                <th>Thành tiền</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{

                                                int i = 1;
                                                foreach (var item in list_order)
                                                {
                                                    // price = item.amount/Convert.ToSingle( item.qty);
                                                    <tr>
                                                        <td>@i</td>
                                                        <td><a href="/Cart/shop/@item.id_product">@item.name</a></td>
                                                        <td>@item.price đ</td>
                                                        <td><input class="num_order" data-id="@item.id_product" name="qty[@item.id_product]" value="@item.qty" type="number" max="100" min="1" /> </td>
                                                        <td><a href="/Cart/Delete/@item.id_product"><i class="fas fa-trash-alt"></i></a></td>
                                                        <td class="table-success text-right" id="amount-@item.id_product">@item.amount đ</td>
                                                    </tr>
                                                    i = i + 1;
                                                }



                                            }

                                        </tbody>
                                    </table>
                                    <a href="/Cart/DeleteAll">Xóa tất cả</a>
                                    <div class=" my-5">
                                        <div class="ship_unit d-flex justify-content-between">
                                            <p class="mt-3">Đơn vị vận chuyển</p>
                                            <div class="ship_unit_content d-flex ml-2 ">
                                                <div class="ship_unit_info d-flex flex-column mr-5">
                                                    <strong>Vận chuyển nhanh</strong>
                                                    <small>Giao hàng tiết kiệm</small>
                                                    <p class="text-danger" style="font-size:13px;">Chọn thời gian giao hàng mong muốn</p>
                                                </div>
                                                <a href="" class="mr-4">THAY ĐỔI</a>
                                                <span>@price_transit đ</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="payment d-flex justify-content-between">
                                        <h5 class="mt-2">Phương thức thanh toán</h5>
                                        <p class="border p-2">Thanh toán khi nhận hàng</p>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <div class="take_note">
                                            <span>Lời nhắn</span>
                                            <input type="text" placeholder="Lưu ý cho người bán" class="p-2" style="width:320px;">
                                        </div>

                                    </div>
                                    <div class="checkout_bill mt-5">
                                        <div class="container">
                                            <div class="row">
                                                <div class="col-md-4">

                                                </div>
                                                <div class="col-md-8 text-right">
                                                    <div class="d-flex justify-content-between">
                                                        <p>Tổng tiền hàng</p>
                                                        <p class="all_amount">@all_amount đ</p>
                                                    </div>
                                                    <div class="d-flex justify-content-between">
                                                        <p>Phí vận chuyển</p>
                                                        <p>@price_transit đ</p>
                                                    </div>
                                                    <div class="d-flex justify-content-between">
                                                        <p class="mt-3">Tổng thanh toán</p>
                                                        <p class="all" style="color:#ee4d2d;font-size:2rem;">@all đ</p>
                                                    </div>
                                                    <button class="btn btn-success w-75 py-2">Đặt hàng</button>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <p>Không có sản phẩm nào để hiển thị</p>
                                }


                            }



                        </div>
                        <p>@location</p>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- The Modal -->
    <div class="modal" id="change_address">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Thêm mới</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <!-- Modal body -->
                <div class="modal-body">
                    <h3>Thêm địa chỉ mới</h3>
                    <form action="/Cart/get_location" method="post">
                        <input type="text" name="fullname" id="fullname" placeholder="Họ & tên" class="form-control mb-3" />
                        <input type="tel" name="telephone" id="telephone" placeholder="Số điện thoại" class="form-control mb-3" />
                        <input type="text" name="address" id="address" placeholder="Địa chỉ" class="form-control mb-3" />


                        <button type="button" name="command" value="close" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" name="command" value="complete" class="btn btn-danger" data-dismiss="modal">Hoàn thành</button>

                    </form>
                    

                </div>
                <!-- Modal footer -->
                <div class="modal-footer">
                    
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $(".num_order").change(function () {

                var id = $(this).attr("data-id");
                var qty = $(this).val();
                var data = { id: id, qty: qty };
                $.ajax({


                    url: "/Cart/change_qty_order",
                    type: "POST",
                    dataType: "json",
                    data: data,

                    success: function (response) {
                        $("#amount-" + id).text(response.amount + " đ");
                        $(".all_amount").text(response.all_amount + " đ");
                        //   var all = all_amount + 7000;
                        // $(".all").text(all);

                    },
                    error: function (xhr, ajaxOptions, thrownError) {
                        alert("loi");
                        alert(xhr.status);
                        alert(thrownError);
                    }


                });
            });
        });
    </script>
   
</body>

</html>
