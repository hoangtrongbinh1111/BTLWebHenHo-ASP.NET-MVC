
@{
    Layout = null;
    ViewBag.Title = "CheckOut";
    ViewBag.Title = "add_product";
    var list_order = ViewBag.list_order;
    var all_amount = ViewBag.all_amount;
    var price_transit = 7000;
    var all = all_amount + price_transit;

}


<!DOCTYPE html>

<html>
@Html.Partial("head")
<link rel="stylesheet" href="~/Public/Asset/css/CheckOut.css">
<style>
</style>
<body>
    <div id="wrapper">
        <div id="tittle-trade" class="d-flex py-3">
            <a href="/Cart/buy_coin">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h3>Check out</h3>
        </div>
        <div class="border_delivery">

        </div>
        <div class="address_ship">
            <div class="ship_header mt-3 d-flex">
                <i class="fas fa-map-marker-alt mx-2"></i>
                <h4>Địa chỉ nhận hàng</h4>
            </div>
            <div class="address_content container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-4">
                                <strong>Hoang Trong Binh (+84)</strong>
                                <p>0985592699</p>
                            </div>
                            <div class="col-md-6">
                                <p> Nhà ông Hoàng Văn Biện, thôn Đào Viên, xã Dân Tiến, huyện Khoái Châu, tỉnh Hưng Yên</p>
                            </div>
                            <div class="col-md-2">
                                <button class="btn btn-danger" data-toggle="modal" data-target="#change_address">Thay đổi</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="btn-continue">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="info-buy-product">
                            <table class="table table-striped table-hover" style="font-size:14px;">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Sản phẩm</th>
                                        <th>Đơn giá</th>
                                        <th>Số lượng</th>
                                        <th>Xóa</th>
                                        <th>Thành tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (list_order != null)
                                        {
                                            int i = 1;
                                            foreach ( var item in list_order)
                                            {
                                                // price = item.amount/Convert.ToSingle( item.qty);
                                                <tr>
                                                    <td>@i</td>
                                                    <td><a href="/Cart/shop/@item.id_product">@item.name</a></td>
                                                    <td>@item.price</td>
                                                    <td>@item.qty </td>
                                                   <td><a href="/Cart/Delete/@item.id_product"><i class="fas fa-trash-alt"></i></a></td>
                                                    <td class="table-success text-right">@item.amount đ</td>
                                                </tr>
                                                i = i + 1;
                                            }
                                        }
                                        else
                                        {
                                            <p>Không có sản phẩm để hiển thị</p>
                                        }


                                    }
                                    @*<tr>
                                             <td>1</td>
                                             <td>Gói 1</td>
                                             <td>120k</td>
                                             <td>2</td>
                                             <td class="table-success text-right">240.000đ</td>
                                        </tr>
                                        <tr>
                                             <td>2</td>
                                             <td>Móc khóa</td>
                                             <td>20k</td>
                                             <td>1</td>
                                             <td class="table-success text-right">20.000đ</td>
                                        </tr>*@
                                </tbody>
                            </table>
                            <div class=" my-5">
                                <div class="ship_unit d-flex justify-content-between">
                                    <p class="mt-3">Đơn vị vận chuyển</p>
                                    <div class="ship_unit_content d-flex ml-2 ">
                                        <div class="ship_unit_info d-flex flex-column mr-5">
                                            <strong>Vận chuyển nhanh</strong>
                                            <small>Giao hàng tiết kiệm</small>
                                            <p class="text-danger" style="font-size:13px;">Chọn thời gian giao hàng mong muốn</p>
                                        </div>
                                        <a href="" class="mr-4">THAY ĐỔI</a>
                                        <span>@price_transit đ</span>
                                    </div>
                                </div>
                            </div>
                            <div class="payment d-flex justify-content-between">
                                <h5 class="mt-2">Phương thức thanh toán</h5>
                                <p class="border p-2">Thanh toán khi nhận hàng</p>
                            </div>
                            <div class="d-flex justify-content-between">
                                <div class="take_note">
                                    <span>Lời nhắn</span>
                                    <input type="text" placeholder="Lưu ý cho người bán" class="p-2" style="width:320px;">
                                </div>

                            </div>
                            <div class="checkout_bill mt-5">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-4">

                                        </div>
                                        <div class="col-md-8 text-right">
                                            <div class="d-flex justify-content-between">
                                                <p>Tổng tiền hàng</p>
                                                <p>@all_amount đ</p>
                                            </div>
                                            <div class="d-flex justify-content-between">
                                                <p>Phí vận chuyển</p>
                                                <p>@price_transit đ</p>
                                            </div>
                                            <div class="d-flex justify-content-between">
                                                <p class="mt-3">Tổng thanh toán</p>
                                                <p style="color:#ee4d2d;font-size:2rem;">@all đ</p>
                                            </div>
                                            <button class="btn btn-success w-75 py-2">Đặt hàng</button>
                                        </div>
                                    </div>

                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- The Modal -->
    <div class="modal" id="change_address">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Thêm mới</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <!-- Modal body -->
                <div class="modal-body">
                    <h3>Thêm địa chỉ mới</h3>
                    <input type="text" name="fullname" id="fullname" placeholder="Họ & tên" class="form-control mb-3" />
                    <input type="tel" id="telephone" placeholder="Số điện thoại" class="form-control mb-3" />
                    <select name="province" class="form-control mb-3">
                        <option value="0" selected>
                            Tỉnh/Thành phố
                        </option>
                        <option value="1">
                            Hà Nội
                        </option>
                        <option value="2">
                            Thành phố Hồ Chí Minh
                        </option>
                        <option value="3">
                            Đà Nẵng
                        </option>

                    </select>
                    <select name="town" class="form-control mb-3">
                        <option value="0" selected>
                            Quận/Huyện
                        </option>
                        <option value="1">
                            Cầu Giấy
                        </option>
                        <option value="2">
                            Bắc Từ Liêm
                        </option>
                        <option value="3">
                            Khoái Châu
                        </option>

                    </select>
                    <select name="" class="form-control mb-3">
                        <option value="0" selected>
                            Phường/Xã
                        </option>
                        <option value="1">
                            Dân Tiến
                        </option>
                        <option value="2">
                            Đồng Tiến
                        </option>
                        <option value="3">
                            Hồng Tiến
                        </option>

                    </select>
                    <input type="tel" class="form-control" placeholder="Địa chỉ cụ thể" />

                </div>
                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Hoàn thành</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
