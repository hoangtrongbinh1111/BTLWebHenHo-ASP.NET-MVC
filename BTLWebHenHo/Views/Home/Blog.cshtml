                                   <img src="~/Public/Asset/img/@hottest.link_img" alt="" class="w-100 d-block mt-5">
                              </a>                              
                              <div class="content-blog">
                                   <h6 class="categories-blog text-uppercase mt-5">
                                        @{
                                             foreach (var cate in category)
                                             {
                                                  if (cate.id_category == hottest.id_category)
                                                  {
                                                       Name_cate = cate.Name;
                                                  }
                                             }
                                   }@Name_cate
                              </h6>
                              <a href="/Home/Blog_Detail/@hottest.id_blog" class="tittle-blog">@hottest.tittle<sup>Featured</sup></a>
                              <p class="date-blog">@hottest.create_date <i class="fas fa-eye ml-2">@hottest.qty_view</i></p>
                              <p class="entry-blog text-left">@hottest.description</p>
                              <a href="/Home/Blog_Detail/@hottest.id_blog" class="detail_blog btn btn-info">Đọc thêm</a>
                         </div>
                         <div class="leave-comment-blog mt-5">
                              <a href="/Home/Blog_Detail/@hottest.id_blog">Leave a comment</a>
                         </div>
                         </div>
                    </div>
                    <div id="list_blog" class="row">
                         @{
                              foreach (var bl in blog)
                              {
                                   
                                   foreach (var cate in category)
                                   {
                                        if (cate.id_category == bl.id_category)
                                        {
                                             Name_cate = cate.Name;
                                        }
                                   }
                                   count++;
                                   <div class="col-md-6 blog-item text-center item_each_blog" data-id="@bl.id_blog">
                                        <a href="/Home/Blog_Detail/@bl.id_blog">
                                             <img src="~/Public/Asset/img/@bl.link_img" alt="" class="w-100 d-block mt-5">
                                        </a>
                                        <div class="content-blog">
                                             <h6 class="categories-blog text-uppercase mt-5">@Name_cate</h6>
                                             <a href="/Home/Blog_Detail/@bl.id_blog" class="tittle-blog">@bl.tittle</a>
