     $(document).ready(function () {
          var Nname = $("td#NickName>span").text();
          var Nbirthday = $("td#birthday>span").text();
          var ischangeName = false;
          var ischangeBirth = false;
          $('#fix_ind_self').click(function () {
               if (ischangeName == true) {
                    Nname = $("input#NickName").val();
               }
               if (ischangeBirth == true) {
                    Nbirthday = $("input#Birthday").val();
               }
               var obj = {
                    UserID: '@info.UserID', height: $("td#height>input").val(),
                    NickName: Nname, birthday: Nbirthday, body: $("td#body>select option:selected").text(),
                    blood: $("td#blood>select option:selected").text(), national_user: $("td#national_user>select option:selected").text(),
                    address_user: $("td#address_user>select option:selected").text(), family: $("td#family>select option:selected").text(),
                    language_user: $("td#languge>select option:selected").text(), education: $("td#education>select option:selected").text(),
                    job: $("td#job>select option:selected").text(), income: $("td#income>select option:selected").text(),
                    martial_status: $("td#martial_status>select option:selected").text(), baby_status: $("td#baby_status>select option:selected").text(),
                    want_baby_status: $("td#want_baby_status>select option:selected").text(), live_status: $("td#live_status>select option:selected").text(),
                    hobbies: $("td#hobbies>input").val(), character_user: $("td#character_user>select option:selected").text(),
                    public_relationship: $("td#public_relationship>select option:selected").text(), want_meet: $("td#want_meet>select option:selected").text(),
                    ready_do_homework: $("td#ready_do_hw>select option:selected").text(), freeday: $("td#freeday>select option:selected").text(),
                    wine: $("td#wine>select option:selected").text(), smoke: $("td#smoke>select option:selected").text(), pay_first_meet: $("td#pay_first_meet>select option:selected").text()
               };
               $.ajax({
                    url: '@Url.Action("Update_Info","Profile")',
                    type: 'post',
                    data: obj,
                    dataType: 'json',
                    success: function (data) {
                         if (data) {
                              alert("Cập nhật thành công");
                              ischangeBirth = ischangeName = false;
                              $("td#NickName>span").html(Nname);
                              $("td#birthday>span").html(Nbirthday);
                              window.location.reload();
                         }
                    }
               });

          });
          //edit Name
          $("td#NickName>i").click(function () {
               $("td#NickName>span").html("<input type='text' name='NickName' id='NickName' value=''/>");
               ischangeName = true;
          });
          //edit birth
          $("td#birthday>i").click(function () {
               $("td#birthday>span").html("<input type='date' name='Birthday' id='Birthday' value=''/>");
               ischangeBirth = true;
          });
          //upload
          $("#btn_upload").click(function () {
               alert($("#change-avt").val());
          });


     });
</script>
</body>
</html>
