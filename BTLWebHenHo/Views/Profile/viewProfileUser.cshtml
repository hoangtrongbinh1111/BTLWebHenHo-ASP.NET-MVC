                                   {
                                        <img src="~/Public/Asset/img/Avatar/@info.avatar" alt="" width="400px" height="400px">
                                   }
                                   else
                                   {
                                        <img src="~/Public/Asset/img/male_default_large.jpg" alt="" width="400px" height="400px">
                                   }
                              }

                         </a>
                         <div class="wp-item-info text-center mt-2">
                              <div class="item-info-user ml-3 font-weight-bolder">
                                   <p class="item-fullname">@info.NickName - @age - <span class="item-address">@info.address_user</span></p></p>

                              </div>

                         </div>
                    </div>
                    <div id="list-img">
                         <div class="tittle-item">
                              Ảnh
                         </div>

                         @if (info.list_thumb != null)
                         {
                              string[] list_img = info.list_thumb.Split('/');
                              <div id="list_your_image">
                                   <ul class="list-unstyled d-flex flex-wrap justify-content-around">
                                        @for (int i = 0; i < list_img.Count() - 1; i++)
                                        {
                                             <li class="mr-2 mb-2" data-name_img="@list_img[i]">
                                                  <img src="~/Public/Asset/img/List_image_upload/@list_img[i]" class="img-fluid" />
