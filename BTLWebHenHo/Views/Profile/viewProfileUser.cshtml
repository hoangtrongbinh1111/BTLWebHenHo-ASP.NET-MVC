
@{
     Layout = null;
     var info = ViewBag.info;
     var age = 0;
     var birthday = "";
     if (info.birthday != null)
     {
          string[] spl = info.birthday.Split('-');
          birthday = spl[0];
          age = DateTime.Now.Year - Convert.ToInt32(birthday);
          birthday = spl[2] + "/" + spl[1] + "/" + spl[0];
     }
     var id_user = ViewBag.id_user;
}

<!DOCTYPE html>

<html>
@Html.Partial("head")
<link rel="stylesheet" href="~/Public/Asset/css/personal.css">
<script src="~/Public/Asset/js/personal.js"></script>
@*<script src="~/Public/Asset/js/vendor/jquery.ui.widget.js"></script>
     <script src="~/Public/Asset/js/vendor/jquery.fileupload.js"></script>*@
<style>
     body {
    font-family: 'Open Sans', sans-serif;
    font-size: 16px;
    background: #dae2f8 linear-gradient(90deg, #f7c9c9, #91a8d1)
}

#wrapper {
    width: 660px;
    margin: 0px auto;
    background: #fff;
    min-height: 100vh;
}

body a:hover {
    text-decoration: none;
}


/* tittle trade */

#tittle-trade {
    color: #fff;
    background: #4c71b5;
}

#tittle-trade a>i {
    color: #fff;
